<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <cn.surine.dashboardview.DashBoardView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:id="@+id/dash"
       android:layout_marginTop="50dp"
       app:foregroundColor="#EF5350"
       app:backgroundColor="#7C26A69A"
       />
   <Button
       android:layout_width="145dp"
       android:layout_height="32dp"
       android:text="继续努力"
       android:id="@+id/button"
       android:textColor="#fff"
       android:background="@drawable/button_shape"
       app:layout_constraintBottom_toBottomOf="@id/dash"
       app:layout_constraintLeft_toLeftOf="@id/dash"
       app:layout_constraintRight_toRightOf="@id/dash"
       android:layout_marginBottom="25dp"
       />

   <SeekBar
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="100dp"
       android:id="@+id/seekbar"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toBottomOf="@id/button"
       />

</androidx.constraintlayout.widget.ConstraintLayout>